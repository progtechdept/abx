<%- include('./partials/head.ejs') %>
<body>
  <div class="container mt-5">
    <h2>Item Information</h2>

    <div class="form-group mb-5">
      <label for="id" class="">ID</label>
      <input
        type="text"
        class="form-control"
        id="id"
        name="id"
        disabled
        value="<%= item._id %>"
      />

      <label for="name" class="">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        disabled
        value="<%= item.name %>"
      />

      <label for="description" class="">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        disabled
        value="<%= item.description%>"
      />

      <label for="category" class="">Category</label>
      <input
        type="text"
        class="form-control"
        id="category"
        name="category"
        disabled
        value="<%= item.category %>"
      />

      <label for="quantity" class="">Quantity</label>
      <input
        type="number"
        class="form-control"
        id="quantity"
        name="quantity"
        disabled
        value="<%= item.quantity %>"
      />
    </div>

    <a href="/items" class="btn btn-secondary">Cancel</a>
  </div>
  <%- include('./partials/head.ejs') %>
</body>
